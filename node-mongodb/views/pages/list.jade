extends ../layout
block content 
  .container
    .row
      table.table.table-hover
        thead 
          th 电影名字
          th 导演
          th 国家 
          th 上映年份  
          //-th 录入时间
          th 查看
          th 更新 
          th 删除
        tbody
          each item in movies 
            tr(class="item-id-#{item._id}")
              td #{item.title}
              td #{item.director}
              td #{item.country}
              td #{item.year}
              //-td #{moment(item.mate.creatAt).format('MM/DD/YYYY')}
              td: a(target="_blank",href="../movies/#{item._id}") 查看
              td: a(target="_blank",href="../admin/update/#{item._id}") 修改 
              td 
                button.btn.btn-danger.btn-sm.del(type="button",data-id="#{item._id}") 删除


            
